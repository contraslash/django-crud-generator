from django.core.urlresolvers import reverse_lazy
from django.contrib.auth.mixins import LoginRequiredMixin

from base import views as base_views

from .. import (
  models,
  forms,
  conf
)


class List(LoginRequiredMixin, base_views.BaseListView):
    """
    List all forms
    """
    queryset = models.${model_name}.objects.all()

    def __init__(self):
        super(List, self).__init__()


class Create(LoginRequiredMixin, base_views.BaseCreateView):
    """
    Create a ${model_name}
    """
    model = models.${model_name}
    fields = '__all__'

    def __init__(self):
        super(Create, self).__init__()

    def get_success_url(self):
        return reverse_lazy(conf.${model_prefix}_DETAIL_URL_NAME, kwargs={
            'pk': self.object.id
        })


